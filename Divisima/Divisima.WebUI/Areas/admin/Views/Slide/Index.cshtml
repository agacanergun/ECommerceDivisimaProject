@model IEnumerable<Slide>
<div class="right_col" role="main" style="padding:0">
    <div class="">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Slayt <small>Yönetimi</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="table-responsive">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">Slayt Adı</th>
                                    <th class="column-title">Slayt Başlığı</th>
                                    <th class="column-title">Slayt Açıklaması</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Slide s in Model)
                                {
                                    <tr class="even pointer">
                                        <td class="a-right a-right ">@s.Name</td>
                                        <td class="a-right a-right ">@s.Title</td>
                                        <td class="a-right a-right ">@s.Description</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- /page content -->