@model IEnumerable<Slide>
<div class="right_col" role="main" style="padding:0">
    <div class="">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Slayt <small>Yönetimi</small></h2>
                    <a asp-area="admin" asp-controller="Slide" asp-action="New" class="btn btn-success" style="float:right;color:#fff">Yeni Slayt</a>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="table-responsive">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">Adı</th>
                                    <th class="column-title">Başlığı</th>
                                    <th class="column-title">Açıklaması</th>
                                    <th class="column-title">Linki</th>
                                    <th class="column-title">Sırası</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Slide s in Model)
                                {
                                    <tr class="even pointer">
                                        <td class="a-right a-right ">@s.Name</td>
                                        <td class="a-right a-right ">@s.Title</td>
                                        <td class="a-right a-right ">@s.Description</td>
                                        <td class="a-right a-right ">@s.Link</td>
                                        <td class="a-right a-right ">@s.DisplayIndex</td>
                                        <td><a class="btn btn-danger slideDelete" style="float:right;color:#fff">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
